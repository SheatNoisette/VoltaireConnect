{

    "manifest_version": 2,
    "name": "Voltaire Connect",
    "version": "1.0",
  
    "description": "Fetches sentence from Projet-Voltaire tries to detect any spelling mistakes",
  
    "permissions" : ["*://*.languagetool.org/*", "webRequest"],

    "icons": {
      "48": "icons/icon48.png"
    },
  
    "content_scripts": [
      {
        "matches": ["*://*.projet-voltaire.fr/*"],
        "js": ["vconnect.js"]
      }
    ],

    "browser_action": {
        "browser_style": true,
        "default_icon": {
          "48": "icons/icon48.png"
        },
        "default_title": "Voltaire Connect",
        "default_popup": "popup/popup.html"
      }
  }